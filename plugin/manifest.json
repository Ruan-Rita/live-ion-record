{
    "manifest_version": 3,
    "name": "Minha Primeira Extensão",
    "version": "1.0",
    "description": "Uma extensão simples para o Chrome.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["http://localhost:3000/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }